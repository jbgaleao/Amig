@model IEnumerable<Amigurumis.Models.Revista>

@{
    ViewBag.Title = "Listagem";
}

    <h2>Listagem de Revistas</h2>
    <br />
<p>
    @Html.ActionLink("Cadastrar", "Create")
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.Label("Tema")
        </th>
        <th>
            @Html.Label("Número da Edição")
        </th>
        <th>
            @Html.Label("Foto da Capa")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tema)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroEdicao)
        </td>
        <td>
            <div class="col-md-10" style="border: thin; padding-top: 10px;">
                <div>
                    <img src="@Url.Action("getImagem", "Revistas", new { id = item.Id })" alt="Foto de Capa da Revista" style="width: 120px; height: 160px" />
                </div>
            </div>
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
